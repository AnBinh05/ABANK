<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.banknotification.reader"
    android:installLocation="auto">

    <!-- Quyền truy cập thông báo -->
    <uses-permission android:name="android.permission.BIND_NOTIFICATION_LISTENER_SERVICE" />

    <!-- Quyền chạy foreground service (Android 9+) -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <!-- Quyền internet (nếu cần) -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Permission cho dynamic receiver -->
    <permission
        android:name="com.banknotification.reader.DYNAMIC_RECEIVER_NOT_EXPORTED_PERMISSION"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.banknotification.reader.DYNAMIC_RECEIVER_NOT_EXPORTED_PERMISSION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.BankNotificationReader"
        android:extractNativeLibs="true"
        android:usesCleartextTraffic="true"
        android:enabled="true"
        tools:targetApi="34">

        <!-- MainActivity -->
        <activity
            android:name="com.banknotification.reader.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.BankNotificationReader">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- NotificationListenerService -->
        <service
            android:name="com.banknotification.reader.service.BankNotificationListenerService"
            android:exported="false"
            android:permission="android.permission.BIND_NOTIFICATION_LISTENER_SERVICE">
            <intent-filter>
                <action android:name="android.service.notification.NotificationListenerService" />
            </intent-filter>
        </service>

    </application>

</manifest>
